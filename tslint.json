{
    "extends": "tslint:recommended",
    "rules": {
        "max-line-length": {
            "options": [140]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "options": [
                "debug",
                "info",
                "log",
                "time",
                "timeEnd",
                "trace"
            ]
        },
        "prefer-const": true
    },
    "jsRules": {
        "max-line-length": {
            "options": [140]
        }
    }
}