    <Label class="text-primary h1" text="Adafruit IO Login" />
    <TextField hint="Adafruit IO Userame" id="username" automationText="username" />
    <TextField hint="Adafruit IO Key" id="aioKey" automationText="aioKey" secure="true" />
    <Button text="Set Credentials" tap="onLoginButtonTap" class="btn btn-primary" />
  </StackLayout>
</Page>